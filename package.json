{
  "name": "drgn",
  "version": "0.0.0-canary.0",
  "description": "ðŸ“¦ Deploy ANY app easily.",
  "exports": "./build/index.js",
  "types": "./types/index.d.ts",
  "bin": {
    "drgn": "./build/bin.js"
  },
  "scripts": {
    "types": "tsc -w",
    "build": "esbuild src/sdk/index.ts --bundle --platform=node --format=esm --outfile=build/index.js && terser build/index.js --compress --mangle --comments false --output --ecma 2021 build/index.js",
    "build:cli": "esbuild src/cli/index.ts --bundle --platform=node --format=esm --outfile=build/bin.js && terser build/bin.js --compress --mangle --comments false --output --ecma 2021 build/bin.js",
    "dev": "concurrently --kill-others \"esbuild src/sdk/index.ts --bundle --watch --platform=node --format=esm --outfile=build/index.js\" \"esbuild src/cli/index.ts --bundle --watch --platform=node --format=esm --outfile=build/bin.js\"",
    "test": "jest"
  },
  "funding": {
    "type": "individual",
    "url": "https://ko-fi.com/azury"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azurydev/drgn.git"
  },
  "keywords": [
    "drgn",
    "deploy",
    "simple",
    "easy-to-use",
    "local",
    "cloud",
    "automation",
    "ssh",
    "cli"
  ],
  "author": "Azury <hello@azury.dev> (https://azury.dev)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/azurydev/drgn/issues"
  },
  "homepage": "https://github.com/azurydev/drgn#readme",
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@types/ssh2": "^0.5.50",
    "@types/yargs": "^17.0.8",
    "boxen": "^6.2.1",
    "chalk": "^5.0.0",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.10",
    "jest": "^27.4.7",
    "node-fetch": "^3.1.0",
    "node-ssh": "^12.0.2",
    "terser": "^5.10.0",
    "typescript": "^4.5.4",
    "yargs": "^17.3.1"
  },
  "engines": {
    "node": ">=17.3.0",
    "npm": ">=8.3.0"
  },
  "type": "module"
}
