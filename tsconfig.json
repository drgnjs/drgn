{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "incremental": true,
    "newLine": "crlf"
  }
}
